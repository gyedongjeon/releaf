{
  "manifest_version": 3,
  "name": "Re:Leaf",
  "version": "0.1.1",
  "description": "Transform web pages into a clean, ebook-like reading view.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Toggle Re:Leaf",
    "default_icon": {
      "16": "src/assets/logo.png",
      "48": "src/assets/logo.png",
      "128": "src/assets/logo.png"
    }
  },
  "icons": {
    "16": "src/assets/logo.png",
    "48": "src/assets/logo.png",
    "128": "src/assets/logo.png"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}