{
  "manifest_version": 3,
  "name": "Re:Leaf",
  "version": "1.0.0",
  "description": "Transform web pages into a clean, ebook-like reading view.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Toggle Re:Leaf"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ]
}
